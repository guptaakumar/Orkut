<h1>Editing perfil</h1>

<% form_for(@perfil, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :data_nascimento %><br />
    <%= f.date_select :data_nascimento, :start_year => 1920, :end_year => (Date.today.year-10) %>
  </p>
  <p>
    <%= f.label :sexo %><br />
    <%= f.radio_button :sexo, "masculino" %><%= Perfil::Sexos[Perfil::Sexo::Masculino] %>
    <%= f.radio_button :sexo, "feminino" %><%= Perfil::Sexos[Perfil::Sexo::Feminino] %>
  </p>
  <p>
    <%= f.label :estado_civil %>
    <%= f.select "estado_civil", hash_to_options(Perfil::EstadosCivis) %>
  </p>
  <p>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.label :descricao %><br/>
    <%= f.text_area :descricao, :lines => 10, :cols => 80 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', @perfil %>

